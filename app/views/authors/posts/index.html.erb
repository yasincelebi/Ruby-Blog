<h4 class="d-flex justify-content-between mb-5">
<span>Posts</span>
<%= link_to 'New Post', new_post_path, class: 'btn btn-dark' %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <%= image_tag post.header_image, class: "header-img" if post.header_image.attached? %>
            <% end %>
          </div>
          <div class="col-md-10">
            <h4 class="card-title text-dark mb-2"> <%= post.title %> </h4>
            <p class="text-secondary mb-0"> <%= post.description %>  </p>
          </div>
        </div>
      </div>
    </div>
  <%end%>
<% end %>





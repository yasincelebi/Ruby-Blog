<div class="row mt-5">
  <% @posts.each do |post| %>
    <div class="col-md-6 col-lg-4">
      <div class="card post-card">
        <%= image_tag post.header_image, class: "header-img w-100 card-img-top", alt: 'Card image cap' if post.header_image.attached? %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
  <%# (https://apidock.com/rails/String/truncate) %>
          <p class="card-text"><%= truncate(post.description, length: 200) %></p>
          <%= link_to "Read Post", blog_post_path(post), class: 'btn btn-secondary read-post-btn mt-auto' %>
          
        </div>
      </div>
    </div>
<%# (https://getbootstrap.com/docs/4.0/components/card/) %>
    
  <% end %>
</div>


